      showStatus("Invalid Data");  
      maxWDText.setText("");   
    }   
  }  
  
  // Compute the maximum regular withdrawals.  
  double compute() {  
    double b, e;  
    double t1, t2;  
  
    t1 = rateOfRet / numPerYear;  
  
    b = (1 + t1);  
    e = numPerYear * numYears;  
  
    t2 = Math.pow(b, e) - 1;  
      
    return principal * (t1/t2 + t1);  
  }     
