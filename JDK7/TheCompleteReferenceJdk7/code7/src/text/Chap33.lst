      showStatus("Invalid Data");  
      remBalText.setText("");   
    }   
  }  
  
  // Compute the loan balance.  
  double compute() {  
    double bal = orgPrincipal;  
    double rate = intRate / payPerYear;  
  
    for(int i = 0; i < numPayments; i++)  
      bal -= payment - (bal * rate);  
  
    return bal;  
  }  
